{
  "name": "meristem-core",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "typecheck:stable": "tsc --noEmit -p tsconfig.json",
    "typecheck:next": "bun run src/cli/typecheck-next.ts",
    "runtime:check": "bun run src/cli/runtime-check.ts",
    "benchmark:baseline": "bun run src/cli/benchmark-baseline.ts",
    "test:integration": "NATS_URL=nats://localhost:4222 bun test --test-name-pattern '.*@integration.*'",
    "jwt:rotate": "bun run src/cli/jwt-rotate.ts rotate",
    "jwt:prune": "bun run src/cli/jwt-rotate.ts prune"
  },
  "dependencies": {
    "@insnh-gd/meristem-shared": "file:../meristem-shared",
    "@elysiajs/jwt": "^1.4.0",
    "@iarna/toml": "^2.2.5",
    "bcrypt": "^6.0.0",
    "elysia": "^1.0.0",
    "effect": "^3.12.0",
    "jose": "^6.1.3",
    "mongodb": "^6.0.0",
    "nats": "^2.29.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "pino": "^10.3.0",
    "typescript": "^5.0.0"
  }
}
