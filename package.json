{
  "name": "meristem-core",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "meristem": "dist/meristem"
  },
  "scripts": {
    "dev": "MERISTEM_RUNTIME_MODE=development bun run --watch src/index.ts",
    "start:dev": "MERISTEM_RUNTIME_MODE=development bun run src/index.ts",
    "start": "bun run src/cli/meristem.ts core start",
    "start:prod": "bun run src/cli/meristem.ts core start",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "build:meta": "bun run scripts/write-build-meta.ts",
    "build:bin": "bun run build:meta && bun build --compile src/cli/meristem.ts --outfile dist/meristem",
    "cli": "bun run src/cli/meristem.ts",
    "plugin:refresh": "bun run src/cli/meristem.ts plugin refresh",
    "plugin:list:available": "bun run src/cli/meristem.ts plugin list --available",
    "plugin:list:installed": "bun run src/cli/meristem.ts plugin list --installed",
    "plugin:sync": "bun run src/cli/meristem.ts plugin sync",
    "plugin:update:all": "bun run src/cli/meristem.ts plugin update --all",
    "plugin:doctor": "bun run src/cli/meristem.ts plugin doctor",
    "typecheck:run:stable": "tsc --noEmit -p tsconfig.json",
    "typecheck:run:next": "bun run src/cli/typecheck-next.ts",
    "runtime:run:check": "bun run src/cli/runtime-check.ts",
    "benchmark:run:baseline": "MERISTEM_WORKSPACE_ROOT=.. bun -e \"import '@insnh-gd/meristem-tooling/cli'\" tooling bench baseline",
    "benchmark:run:pack": "MERISTEM_WORKSPACE_ROOT=.. bun -e \"import '@insnh-gd/meristem-tooling/cli'\" tooling bench pack",
    "benchmark:run:pack:full": "MERISTEM_WORKSPACE_ROOT=.. bun -e \"import '@insnh-gd/meristem-tooling/cli'\" tooling bench pack --with-http --with-reliability",
    "benchmark:run:http": "MERISTEM_WORKSPACE_ROOT=.. bun -e \"import '@insnh-gd/meristem-tooling/cli'\" tooling bench http-matrix --requests 400 --concurrency 40 --warmup 40 --timeout-ms 3000",
    "benchmark:run:http:same-hwid": "MERISTEM_WORKSPACE_ROOT=.. bun -e \"import '@insnh-gd/meristem-tooling/cli'\" tooling bench http-matrix --join-mode same-hwid --requests 1200 --concurrency 80 --warmup 80 --timeout-ms 3000",
    "benchmark:run:http:unique-hwid": "MERISTEM_WORKSPACE_ROOT=.. bun -e \"import '@insnh-gd/meristem-tooling/cli'\" tooling bench http-matrix --join-mode unique-hwid --requests 1200 --concurrency 80 --warmup 80 --timeout-ms 3000",
    "test:run:integration:core": "MERISTEM_WORKSPACE_ROOT=.. NATS_URL=nats://localhost:4222 bun -e \"import '@insnh-gd/meristem-tooling/cli'\" tooling test integration-core",
    "jwt:run:rotate": "bun run src/cli/jwt-rotate.ts rotate",
    "jwt:run:prune": "bun run src/cli/jwt-rotate.ts prune"
  },
  "dependencies": {
    "@insnh-gd/meristem-shared": "npm:@jsr/insnh-gd__meristem-shared@^0.1.4",
    "@elysiajs/jwt": "^1.4.0",
    "@iarna/toml": "^2.2.5",
    "bcrypt": "^6.0.0",
    "elysia": "^1.0.0",
    "effect": "^3.12.0",
    "jose": "^6.1.3",
    "mongodb": "^6.0.0",
    "nats": "^2.29.3"
  },
  "devDependencies": {
    "@insnh-gd/meristem-tooling": "npm:@jsr/insnh-gd__meristem-tooling@^0.1.3",
    "@types/bun": "latest",
    "@typescript/native-preview": "^7.0.0-dev.20260210.1",
    "pino": "^10.3.0",
    "typescript": "^5.0.0"
  }
}
